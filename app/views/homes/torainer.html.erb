<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<h1 class="mt-5">トレーナー一覧</h1>
			<div class="row">
				<%= link_to "ユーザー一覧", users_path, class: "offset-10" %>
			</div>
			<div class="row">
				<%= link_to "トレーニー一覧", torainee_path, class: "offset-10" %>
			</div>
		</div>
	</div>
	<div class="row">
		<% @users.each do |user| %>
			<div class="col-lg-3 card  mt-5 mx-auto">
				<%= link_to user_path(user.id) do %>
				<%= attachment_image_tag user, :image, fallback: "no_image.jpg", class: "img-fluid" %>
				<% end %>
				<p><%= user.name %></p>
					<% if user.user_status  == 1 %>
					<p>
           			トレー二ー
					<% else %>
					トレーナー
					<% end %>
					</p>
			</div>
		<% end %>
	</div>
	<div class="row pagination">
		<div class="mx-auto">
			<%= paginate @users %>
		</div>
	</div>
</div>