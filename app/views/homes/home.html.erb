<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h1>おすすめトレーナー</h1>
		</div>
	</div>
	<div class="row">
		<% @users.each do |user| %>
			<div class="col-xs-3">
				<% if user.user_status == 2 %>

					<%= link_to user_path(user.id) do %>
					<%= attachment_image_tag user, :image, fallback: "no_image.jpg", size:'100x100' %>
					<% end %>
					<p><%= user.name %></p>
						<% if user.user_status  == 1 %>
						<p>
	           			トレー二ー
						<% else %>
						トレーナー
						<% end %>
						</p>

				<% end %>
			</div>
		<% end %>
	</div>

	<div class="row">
		<div class="col-xs-12">
			<h1>おすすめトレー二ー</h1>
		</div>
	</div>
	<div class="row">
		<% @users.each do |user| %>
			<div class="col-xs-3">
				<% if user.user_status == 1 %>

					<%= link_to user_path(user.id) do %>
					<%= attachment_image_tag user, :image, fallback: "no_image.jpg", size:'100x100' %>
					<% end %>
					<p><%= user.name %></p>
						<% if user.user_status  == 1 %>
						<p>
	           			トレー二ー
						<% else %>
						トレーナー
						<% end %>
						</p>

				<% end %>
			</div>
		<% end %>
	</div>
</div>