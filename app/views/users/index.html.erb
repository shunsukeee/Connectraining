<div class="container-fluid">
	<% breadcrumb :index_user, @user %>
	<%= breadcrumbs pretext: " ",separator: " &rsaquo; " %>
</div>
<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<h1 class="mt-5 user-index-text" style="color:#6c6b6b;">User</h1>
			<div class="row">
				<%= link_to "torainer", torainer_path, class: "offset-10 user-text", data: {"turbolinks" => false} %>
			</div>
			<div class="row">
				<%= link_to "torainee", torainee_path, class: "offset-10 user-text", data: {"turbolinks" => false} %>
			</div>
		</div>
	</div>
	<div class="row">
		<% @users.each do |user| %>
			<div class="col-lg-3 card  mt-5 mx-auto">
				<%= link_to user_path(user.id), data: {"turbolinks" => false} do %>
				<%= attachment_image_tag user, :image, fallback: "no_image.jpg", size:"253x253" %>
				<% end %>
				<p><%= user.name %></p>
				<% if user.user_status  == 1 %>
				<p>トレー二ー</p>
				<% else %>
				<p>トレーナー</p>
				<% end %>
			</div>
		<% end %>
	</div>
	<div class="row pagination">
		<div class="mx-auto">
		<%= paginate @users %>
		</div>
	</div>
</div>