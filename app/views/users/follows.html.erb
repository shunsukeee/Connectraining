<div class="container">
	<div class="row">

		<h1>フォロー一覧</h1>

		<table class="table table-hover table-inverse">
			<thead>

				<tr>
					<th>image</th>
					<th>name</th>
					<th></th>
					<th></th>
					<th></th>
				</tr>

			</thead>
			<tbody>

		<% @users.each do |user| %>
			
			<tr>
				<th><%= attachment_image_tag user, :image, fallback: "no_image.jpg", size:'100x100' %></th>
				<th><%= user.name %></th>
				<th>
					<% if user.user_status == 1 %>
					トレーニー
					<% else %>
					トレーナー
					<% end %>
				</th>
			    <% if current_user != user %>
			        <% if user.followed_by?(current_user) %>
			            <th><%=link_to "フォロー外す", user_relationships_path(user.id), method: :delete %></th>
			        <% else %>
			            <th><%=link_to "フォローする", user_relationships_path(user.id), method: :post %></th>
			        <% end %>
		        <% end %>
		        <th><%=link_to "詳細", user_path(user.id) %></th>
		    </tr>
		    <% end %>
		</table>
	</div>
</div>