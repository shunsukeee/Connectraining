<div class="container-fluid">
  <div class="row">
    <div class="col-4 offset-4 card">
      <h2>ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row">
          <%= f.label :email, "メールアドレス", class: "offset-1" %>
        </div>
        <div class="row">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-10 offset-1" %>
        </div>

        <div class="row">
          <%= f.label :password, "パスワード", class: "offset-1" %>
        </div>
        <div class="row">
          <%= f.password_field :password, autocomplete: "current-password", class: "col-10 offset-1" %>
        </div>

        <br>

        <div class="row">
          <%= f.submit "ログイン", class: "btn btn-outline-dark col-10 offset-1" %>
        </div>
        <br>
      <% end %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-3 offset-4">
      登録していない方は<%= link_to "こちら", new_registration_path(resource_name) %>
    </div>
  </div>
</div>
