<div class="container">
	<div class="row">
		<div class="col-xs-3">

			<%= render 'users/user', user: @user %>

		</div>

		<div class="col-xs-9">
			<table class="table">
				<tbody>
					<% @tweets.each do |tweet| %>
					<tr>
						<td><%= tweet.body %></td>
						<td><%= attachment_image_tag tweet, :tweet_image, size:'100x100' %></td>
						<td><%= link_to "詳細", tweet_path(tweet.id) %><td>

						<% if tweet.favorited_by?(current_user) %>
							  <td>
									<%= link_to tweet_favorites_path(tweet), method: :delete do %>
									<i class="fa fa-heart" aria-hidden="true" style= "color: black"></i>
									<%= tweet.favorites.count %> 
									<% end %>
							  </td>
								<% else %>
							  <td>
									<%= link_to tweet_favorites_path(tweet), method: :post do %>
									<i class="fa fa-heart-o" aria-hidden="true"></i>
									<%= tweet.favorites.count %> 
									<% end %>
							  </td>
						<% end %>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>