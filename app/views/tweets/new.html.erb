<div class="container-fluid">
	<%= form_for(@tweet) do |f| %>
	<%= render 'layouts/error_messages', model: @tweet %>
		<div class="row mt-5">
			<%= f.label "ツイート内容",class: "offset-3 col-6" %>
			<%= f.text_area :body, class: "offset-3 col-6" %>
		</div>

		<div class="row">
            <script>
              $(function() {
                function readURL(input) {
                    if (input.files && input.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                $('#img_prev').attr('src', e.target.result);
                    }
                    reader.readAsDataURL(input.files[0]);
                    }
                }
                $("#tweet_tweet_image").change(function(){
                    readURL(this);
                });
              });
            </script>
            <%= attachment_image_tag @tweet, :tweet_image, fallback: "", id: "img_prev", class: "mx-auto mt-5 img-fluid col-6 offset-3" %>
        </div>

		<div class="row mt-5">
	        <%= f.attachment_field :tweet_image, class: "offset-3 col-6" %>
	    </div>

		<div class="row mt-5">
			<%= f.submit "ツイートする", class: "btn btn-primary offset-3 col-6 mb-3" %>
		</div>
	<% end %>
</div>